					<img th:src="|/images/recipes/${item.imageFileName}|">
					<a th:href="@{/recipes/{id}(id=${item.id})}"><h2 th:text="${item.title}">Title</h2></a>
				</div>
			</section>
			
			<a href="/">Back to home</a>
		</main>
	</body>
