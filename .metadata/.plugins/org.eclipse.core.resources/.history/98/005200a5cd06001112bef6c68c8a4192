	<head>
		<title>Login</title>
		<link rel="stylesheet" th:href="@{/css/navbar.css}">
	</head>
	
	<body>
		<div th:replace="fragments/navbar :: navbar"></div>	
		<h1>Login</h1>
		<form th:action="@{/login}" method="POST">
				<div th:if="${#fields.hasGlobalErrors()}">
					<p th:each="err : ${#fields.globalErrrors()}" th:text="${err}"></p>
				</div>
				<div>
					<span>Username:</span>
					<span><input name="username" type="text" required /></span>
					<p th:if="${#fields.hasErrors('username')}" th:errors="*{username}"></p>
				</div>
				<div>
					<span>Password:</span>
					<span><input name="password" type="password" required /></span>
					<p th:if="${#fields.hasErrors('password')}" th:errors="*{password}"></p>
				</div>
				<div>
					<span><button type="submit">Login</button></span>
				</div>
		</form>
		<div>
			<a th:href="@{/register}" th:text="Registrati">Register, bro!</a>
		</div>
	</body>
