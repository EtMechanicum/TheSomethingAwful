<!DOCTYPE html>

<html>
	<head>
		<title>Registration</title>
		<link rel="stylesheet" href="/css/navbar.css">
	</head>
	
	<body>
		<div th:replace="~{fragments/navbar :: navbar}"></div>
		<h1>THIS IS A REGISTRATION FORM</h1>
		<section>
			<form th:action="@{/register}" method="post">
				<div th:if="${#fields.hasGlobalErrors()}">
					<p th:each="err : ${#fields.globalErrors()}" th:text="${err}"></p>
				</div>
				<div>
					Name: <span><input type="text" th:field="${newUser.name}"></span>
					<p th:if="${#fields.hasErrors('name')}" th:errors="${newUser.name}"></p>
					Surname: <span><input type="text" th:field="${newUser.surname}"></span>
					<p th:if="${#fields.hasErrors('surname')}" th:errors="${newUser.surname}"></p>
					Email: <span><input type="email" th:field="${newUser.email}"></span>
					<p th:if="${#fields.hasErrors('email')}" th:errors="${newUser.email}"></p>
				</div>
				<div>
					Username: <span><input type="text" th:field="${newCredentials.username}"></span>
					<p th:if="${#fields.hasErrors('username')}" th:errors="${newCredentials.username}"></p>
					Password: <span><input type="password" th:field="${newCredentials.password}"></span>
					<p th:if="${#fields.hasErrors('password')}" th:errors="${newCredentials.password}"></p>
				</div>
				<button>Register</button>
			</form>
		</section>
	</body>
</html>